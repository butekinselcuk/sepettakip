# Docker ortamı için .env dosyası
# Bu dosya, Docker containerlarının çalışması için gereken ortam değişkenlerini içerir
# Üretimde kullanmadan önce hassas bilgileri değiştirmeyi unutmayın!

# Veritabanı Bağlantısı
POSTGRES_USER=postgres
POSTGRES_PASSWORD=securepassword
POSTGRES_DB=sepettakip
DATABASE_URL=postgresql://postgres:securepassword@postgres:5432/sepettakip

# Next.js ve Auth
NEXTAUTH_SECRET=super_secret_key_change_me_in_production
NEXTAUTH_URL=http://localhost:3000

# API Keys
MAPS_API_KEY=your_maps_api_key_here
SMS_API_KEY=your_sms_api_key_here

# Email Servisi
EMAIL_SERVER_HOST=smtp.example.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=user@example.com
EMAIL_SERVER_PASSWORD=email_password
EMAIL_FROM=noreply@sepettakip.com

# Uygulama Ayarları
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1
APP_URL=http://localhost:3000

# Cache ve Redis
REDIS_HOST=redis
REDIS_PORT=6379
CACHE_TTL=3600

# Logging
LOG_LEVEL=info

# TZ (Timezone) ayarı - İstanbul için
TZ=Europe/Istanbul 